@model Interview_Invitation.Models.Interview

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="path-to-your-styles.css" />


<form asp-controller="Interview" asp-action="Create" class="container interview-create-wrapper" method="post" enctype="multipart/form-data">

   
    <div class="form-group" id="interview-container">
        <div class="interview-item">
            <h5>New Interview Invitation</h5>
            <br />
        <input asp-for="InterviewerName" placeholder="Interviewer Name" class="form-control" />
        <span asp-validation-for="InterviewerName" class="text-danger"></span>

        <br />
 
        <input asp-for="Date" type="datetime-local" placeholder="Date" class="form-control" />
        <input asp-for="Date" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />

        <span asp-validation-for="Date" class="text-danger"></span>
  
        <br />
 

        <input asp-for="Duration" placeholder="Interview Duration (minutes)" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
  
        <br />

        <label asp-for="InterviewType">Interview Type:</label>
        <select asp-for="InterviewType" class="form-control">
            <option value="Remotely">Remotely</option>
            <option value="Inside">Inside</option>
        </select>
        <span asp-validation-for="InterviewType" class="text-danger"></span>
        </div>
    </div>
        <br />
    <!-- Subjects -->
  
    <div class="form-group" id="subject-container">
        <div class="subject-item">
            <h5>Subjects</h5>
            <br />
                <input asp-for="Subjects[0].Code" placeholder="Code" class="form-control" />
            <span asp-validation-for="Subjects[0].Code" class="text-danger"></span>
            <br />
       
                <input asp-for="Subjects[0].Title" placeholder="Title" class="form-control" />
            <span asp-validation-for="Subjects[0].Title" class="text-danger"></span>
            <br />
        
                <input asp-for="Subjects[0].Interviewer" placeholder="Interviewer" class="form-control" />
            <span asp-validation-for="Subjects[0].Interviewer" class="text-danger"></span>
          
        </div>
    </div>

        <br />
    <!-- Interviewees -->
   
    <div class="form-group" id="interviewee-container">
        <div class="interviewee-item">
            <h5>Interviewees</h5>
            <br />
                <input asp-for="Interviewees[0].FullName" placeholder="Full Name" class="form-control" />
            <span asp-validation-for="Interviewees[0].FullName" class="text-danger"></span>
            <br />
         
                <input asp-for="Interviewees[0].Email" placeholder="Email" class="form-control" />
            <span asp-validation-for="Interviewees[0].Email" class="text-danger"></span>
            <br />
        
                <input asp-for="Interviewees[0].ContactNumber" placeholder="Contact Number" class="form-control" />
            <span asp-validation-for="Interviewees[0].ContactNumber" class="text-danger"></span>
            <br />
            <label>CvFile:</label>
            <input asp-for="Interviewees[0].CvFile" name="Interviewees[0].CvFile" type="file" class="form-control" accept=".pdf" />
            <span asp-validation-for="Interviewees[0].CvFile" class="text-danger"></span>
           
        </div>
    </div>


    <br />
    <button type="submit" class="btn btn-primary btn-block">Create</button>
</form>
    <br />
    <form>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>


@section Scripts {
    <script>

    </script>
}